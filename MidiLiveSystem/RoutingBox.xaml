<Page x:Class="MidiLiveSystem.RoutingBox"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MidiLiveSystem"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RoutingBox">

    <Grid>
        <TabControl>
            <TabItem Header="Presets">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="btnPreset1" Content="Button1" HorizontalAlignment="Left" Margin="0,183,0,0" VerticalAlignment="Top" Height="42" Width="61"/>
                    <Button x:Name="btnPreset2" Content="Button2" HorizontalAlignment="Left" Margin="80,183,0,0" VerticalAlignment="Top" Height="42" Width="61"/>
                    <Button x:Name="btnPreset3" Content="Button3" HorizontalAlignment="Left" Margin="160,183,0,0" VerticalAlignment="Top" Height="42" Width="61"/>
                    <Button x:Name="btnPreset4" Content="Button4" HorizontalAlignment="Left" Margin="240,183,0,0" VerticalAlignment="Top" Height="42" Width="61"/>
                    <Button x:Name="btnPreset5" Content="Button5" HorizontalAlignment="Left" Margin="320,183,0,0" VerticalAlignment="Top" Height="42" Width="61"/>
                    <Button x:Name="btnPreset6" Content="Button6" HorizontalAlignment="Left" Margin="400,183,0,0" VerticalAlignment="Top" Height="42" Width="61"/>
                    <Button x:Name="btnPreset7" Content="Button7" HorizontalAlignment="Left" Margin="480,183,0,0" VerticalAlignment="Top" Height="42" Width="61"/>
                    <Button x:Name="btnPreset8" Content="Button8" HorizontalAlignment="Left" Margin="560,183,0,0" VerticalAlignment="Top" Height="42" Width="61"/>
                </Grid>
            </TabItem>
            <TabItem Header="Settings">
                <Grid Background="#FFE5E5E5">
                    <ComboBox Name="cbMidiIn" HorizontalAlignment="Left" Margin="100,40,0,0" VerticalAlignment="Top" Width="120"/>
                    <ComboBox Name="cbMidiOut" HorizontalAlignment="Left" Margin="100,80,0,0" VerticalAlignment="Top" Width="120"/>
                    <ComboBox Name="cbChannelMidiIn" HorizontalAlignment="Left" Margin="240,40,0,0" VerticalAlignment="Top" Width="60"/>
                    <ComboBox Name="cbChannelMidiOut" HorizontalAlignment="Left" Margin="240,80,0,0" VerticalAlignment="Top" Width="60"/>
                    <Button Name="btnMem" Content="MEM" HorizontalAlignment="Left" Margin="730,15,0,0" VerticalAlignment="Top" Click="btnMem_Click" Height="50" Width="50"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Page>
