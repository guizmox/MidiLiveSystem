<Page x:Class="MidiLiveSystem.RoutingBox"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MidiLiveSystem" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="400"
      Title="RoutingBox" Background="DimGray">

    <Page.Resources>
        <Style x:Key="TabControlHeaderStyle" TargetType="{x:Type TabItem}">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="LightYellow"/>
            <!-- Couleur du texte rouge -->
            <Setter Property="FontSize" Value="10"/>
            <!-- Taille de la police 10 -->
            <!-- Autres setters pour le style des labels peuvent être ajoutés ici -->
        </Style>
    </Page.Resources>

    <Grid>
        <TabControl ItemContainerStyle="{StaticResource TabControlHeaderStyle}" Padding="2">
            <TabItem>
                <TabItem.Header>
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50*" />
                                <ColumnDefinition Width="50*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Name="tbRoutingName" Grid.Column="0" Text="Routing Name" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="IndianRed" FontSize="10" />
                            <TextBlock Grid.Column="1" HorizontalAlignment="Center">  
                                <materialDesign:PackIcon
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Kind="Music" />
                            </TextBlock>
                        </Grid>
                    </StackPanel>
                </TabItem.Header>
                <Grid x:Name="gridBoxes">
                    <!-- Définir une grille de 4x4 cellules -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50*" />
                        <RowDefinition Height="50*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="25*" />
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnPreset1" Tag="0" Grid.Row="0" Grid.Column="0" Height="90" Width="90" Click="btnPreset_Click">
                        <StackPanel Width="Auto">
                            <TextBlock HorizontalAlignment="Center">
                            <materialDesign:PackIcon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Kind="RouterNetwork" />
                            </TextBlock>
                            <TextBlock Text="Preset 1" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnPreset2" Tag="1" Grid.Row="0" Grid.Column="1" Height="90" Width="90" Click="btnPreset_Click">
                        <StackPanel Width="Auto">
                            <TextBlock HorizontalAlignment="Center">
                            <materialDesign:PackIcon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Kind="RouterNetwork" />
                            </TextBlock>
                            <TextBlock Text="Preset 2" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnPreset3" Tag="2" Grid.Row="0" Grid.Column="2" Height="90" Width="90" Click="btnPreset_Click">
                        <StackPanel Width="Auto">
                            <TextBlock HorizontalAlignment="Center">
                            <materialDesign:PackIcon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Kind="RouterNetwork" />
                            </TextBlock>
                            <TextBlock Text="Preset 3" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnPreset4" Tag="3" Grid.Row="0" Grid.Column="3" Height="90" Width="90" >
                        <StackPanel Width="Auto">
                            <TextBlock HorizontalAlignment="Center">
                            <materialDesign:PackIcon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Kind="RouterNetwork" />
                            </TextBlock>
                            <TextBlock Text="Preset 4" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnPreset5" Tag="4" Grid.Row="1" Grid.Column="0" Height="90" Width="90" Click="btnPreset_Click">
                        <StackPanel Width="Auto">
                            <TextBlock HorizontalAlignment="Center">
                            <materialDesign:PackIcon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Kind="RouterNetwork" />
                            </TextBlock>
                            <TextBlock Text="Preset 5" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnPreset6" Tag="5" Grid.Row="1" Grid.Column="1" Height="90" Width="90" Click="btnPreset_Click">
                        <StackPanel Width="Auto">
                            <TextBlock HorizontalAlignment="Center">
                            <materialDesign:PackIcon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Kind="RouterNetwork" />
                            </TextBlock>
                            <TextBlock Text="Preset 6" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnPreset7" Tag="6" Grid.Row="1" Grid.Column="2" Height="90" Width="90" Click="btnPreset_Click">
                        <StackPanel Width="Auto">
                            <TextBlock HorizontalAlignment="Center">
                            <materialDesign:PackIcon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Kind="RouterNetwork" />
                            </TextBlock>
                            <TextBlock Text="Preset 7" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnPreset8" Tag="7" Grid.Row="1" Grid.Column="3" Height="90" Width="90" Click="btnPreset_Click">
                        <StackPanel Width="Auto">
                            <TextBlock HorizontalAlignment="Center">
                            <materialDesign:PackIcon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Kind="RouterNetwork" />
                            </TextBlock>
                            <TextBlock Text="Preset 8" />
                        </StackPanel>
                    </Button>
                </Grid>

            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel>
                        <TextBlock HorizontalAlignment="Center">
                            <materialDesign:PackIcon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Kind="Tools" />
                        </TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <Grid x:Name="gridSettings">
                    <!-- Définir une grille de 4x4 cellules -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15*" />
                        <RowDefinition Height="15*" />
                        <RowDefinition Height="15*" />
                        <RowDefinition Height="15*" />
                        <RowDefinition Height="15*" />
                        <RowDefinition Height="15*" />
                        <RowDefinition Height="15*" />
                        <RowDefinition Height="15*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="50*" />
                        <ColumnDefinition Width="15*" />
                        <ColumnDefinition Width="10*" />
                    </Grid.ColumnDefinitions>
                    <Button Name="tbSolo" Grid.Column="2" Grid.Row="6" Grid.RowSpan="2" Grid.ColumnSpan="2" Width="50" Background="DarkGray" Click="tbSolo_Click" >
                        <StackPanel Width="Auto">
                            <TextBlock HorizontalAlignment="Center">
                            <materialDesign:PackIcon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Kind="VolumeHigh" />
                            </TextBlock>
                        </StackPanel>
                    </Button>
                    <Button Name="tbMute" Grid.Column="2" Grid.Row="4" Grid.RowSpan="2" Grid.ColumnSpan="2" Width="50" Background="DarkGray" Click="tbMute_Click" >
                        <StackPanel Width="Auto">
                            <TextBlock HorizontalAlignment="Center">
                            <materialDesign:PackIcon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Kind="Mute" />
                            </TextBlock>
                        </StackPanel>
                    </Button>
                    <Label Grid.Column="0" Grid.Row="0" Content="PRESET BUTTON"/>
                    <TextBox Name="tbPresetName" Grid.Column="1" Grid.Row="0" Text="MY PRESET" MaxLength="30" materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"/>
                    <ComboBox Name="cbPresetButton" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="0" SelectionChanged="cbPresetButton_SelectionChanged"/>
                    <Label Grid.Column="0" Grid.Row="1" Content="INPUT PORT + CH"/>
                    <Label Grid.Column="0" Grid.Row="2" Content="OUTPUT PORT + CH"/>
                    <ComboBox Name="cbMidiIn" Grid.Column="1" Grid.Row="1"/>
                    <ComboBox Name="cbMidiOut" Grid.Column="1" Grid.Row="2"/>
                    <ComboBox Name="cbChannelMidiIn" Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2"/>
                    <ComboBox Name="cbChannelMidiOut" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2"/>
                    <Label Grid.Column="0" Grid.Row="3" Content="PROGRAM"/>
                    <StackPanel Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" >
                        <Button Name="tbChoosePreset" Click="tbChoosePreset_Click" Content="Choose Preset" FontSize="8" Width="90" Height="20"/>
                        <ComboBox Name="cbChannelPreset"/>
                        <Label Name="lbPreset" Content="" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Label Grid.Column="0" Grid.Row="4" Content="NOTE RANGE"/>
                    <StackPanel Grid.Column="1" Grid.Row="4" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30*" />
                                <ColumnDefinition Width="20*" />
                                <ColumnDefinition Width="30*" />
                                <ColumnDefinition Width="20*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="Low"/>
                            <TextBox Name="tbFilterLowNote" Grid.Column="1" MaxLength="3" Text="0" materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"/>
                            <Label Grid.Column="2" Content="High"/>
                            <TextBox Name="tbFilterHighNote" Grid.Column="3" MaxLength="3" Text="127" materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"/>
                        </Grid>
                    </StackPanel>
                    <Label Grid.Column="0" Grid.Row="5" Content="VELOCITY RANGE"/>
                    <StackPanel Grid.Column="1" Grid.Row="5" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30*" />
                                <ColumnDefinition Width="20*" />
                                <ColumnDefinition Width="30*" />
                                <ColumnDefinition Width="20*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="Low"/>
                            <TextBox Name="tbFilterLowVelo" Grid.Column="1" MaxLength="3" Text="0" materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"/>
                            <Label Grid.Column="2" Content="High"/>
                            <TextBox Name="tbFilterHighVelo" Grid.Column="3" MaxLength="3" Text="127" materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"/>
                        </Grid>
                    </StackPanel>
                    <Label Grid.Column="0" Grid.Row="6" Content="INIT CC VALUES"/>
                    <ComboBox Name="cbCCDefaultValues" Grid.Column="1" Grid.Row="6">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60*"/>
                                        <ColumnDefinition Width="40*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Description}" HorizontalAlignment="Left"/>
                                    <TextBox Grid.Column="1" Text="{Binding Value}" MaxLength="3" HorizontalAlignment="Right" materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"/>
                                </Grid>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                        <local:ComboBoxCustomItem Id="tbCC_Pan" Description="Pan :" Value="64"/>
                        <local:ComboBoxCustomItem Id="tbCC_Volume" Description="Volume :" Value="100"/>
                        <local:ComboBoxCustomItem Id="tbCC_Reverb" Description="Reverb :" Value="-1"/>
                        <local:ComboBoxCustomItem Id="tbCC_Chorus" Description="Chorus :" Value="-1"/>
                        <local:ComboBoxCustomItem Id="tbCC_Release" Description="Release :" Value="-1"/>
                        <local:ComboBoxCustomItem Id="tbCC_Attack" Description="Attack :" Value="-1"/>
                        <local:ComboBoxCustomItem Id="tbCC_Decay" Description="Decay :" Value="-1"/>
                        <local:ComboBoxCustomItem Id="tbCC_Bright" Description="Bright :" Value="-1"/>
                    </ComboBox>
                    <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="114*" />
                                <ColumnDefinition Width="38*" />
                                <ColumnDefinition Width="19*" />
                                <ColumnDefinition Width="95*" />
                                <ColumnDefinition Width="38*" />
                                <ColumnDefinition Width="30*" />
                                <ColumnDefinition Width="65*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="TRANSPOSITION"/>
                            <TextBox Name="tbNoteTransposition" MaxLength="2" Text="0" materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed" Grid.ColumnSpan="2" Margin="114,0,0,0"/>
                            <Label Grid.Column="2" Content="AFTERTOUCH PLAY" Grid.ColumnSpan="3" Margin="19,0,38,0"/>
                            <CheckBox Name="ckAftertouchToNote" Grid.Column="4" IsChecked="False" Grid.ColumnSpan="2" Margin="0,0,30,0"/>
                        </Grid>
                    </StackPanel>

                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel>
                        <TextBlock HorizontalAlignment="Center">
                            <materialDesign:PackIcon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Kind="Hammer" />
                        </TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <Grid x:Name="gridSettings2">
                    <!-- Définir une grille de 4x4 cellules -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15*" />
                        <RowDefinition Height="15*" />
                        <RowDefinition Height="15*" />
                        <RowDefinition Height="15*" />
                        <RowDefinition Height="15*" />
                        <RowDefinition Height="15*" />
                        <RowDefinition Height="15*" />
                        <RowDefinition Height="15*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30*" />
                        <ColumnDefinition Width="40*" />
                        <ColumnDefinition Width="15*" />
                        <ColumnDefinition Width="15*" />
                    </Grid.ColumnDefinitions>
                    <Button Name="btnCopyPreset" Grid.Column="2" Grid.Row="6" Grid.RowSpan="2" Width="50" Background="DarkGray" Click="btnCopyPreset_Click" >
                        <StackPanel Width="Auto">
                            <TextBlock HorizontalAlignment="Center">
                            <materialDesign:PackIcon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Kind="ContentCopy" />
                            </TextBlock>
                        </StackPanel>
                    </Button>

                    <Button Name="btnPastePreset" Grid.Column="3" Grid.Row="6" Grid.RowSpan="2" Width="50" Background="DarkGray" Click="btnPastePreset_Click" >
                        <StackPanel Width="Auto">
                            <TextBlock HorizontalAlignment="Center">
                            <materialDesign:PackIcon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Kind="ContentPaste" />
                            </TextBlock>
                        </StackPanel>
                    </Button>
                    
                    <Label Grid.Column="0" Grid.Row="0" Content="FILTERS"/>
                    <ComboBox Grid.Column="1" Grid.Row="0">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Content}" IsChecked="{Binding IsChecked}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                        <CheckBox Name="ckAllowModulation" IsChecked="True" Content="Modulation"/>
                        <CheckBox Name="ckAllowNotes" IsChecked="True" Content="Notes"/>
                        <CheckBox Name="ckAllowAllCC"  IsChecked="True" Content="CC"/>
                        <CheckBox Name="ckAllowSysex" IsChecked="True" Content="SysEx"/>
                        <CheckBox Name="ckAllowNrpn" IsChecked="True" Content="Nrpn"/>
                        <CheckBox Name="ckAllowAftertouch" IsChecked="True" Content="Aftertouch"/>
                        <CheckBox Name="ckAllowPitchBend" IsChecked="True" Content="Pitch"/>
                        <CheckBox Name="ckAllowProgramChange" IsChecked="True" Content="Prog. Change"/>
                    </ComboBox>
                    <Label Grid.Column="0" Grid.Row="2" Content="CC CONVERTERS"/>
                    <StackPanel Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2" Grid.RowSpan="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50*"/>
                                <ColumnDefinition Width="50*"/>
                            </Grid.ColumnDefinitions>
                            <Button Name="btnAddCCConvert" Grid.Column="0" Width="50" Content="+" Background="DarkOliveGreen" Click="btnAddCCConvert_Click" />
                            <Button Name="btnRemoveCCConvert" Grid.Column="1" Width="50" Content="-" Background="IndianRed" Click="btnRemoveCCConvert_Click" />
                        </Grid>
                    </StackPanel>

                    <ComboBox Name="cbCCConvert" Grid.Column="1" Grid.Row="3"/>
                    <StackPanel Grid.Column="1" Grid.Row="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30*"/>
                                <ColumnDefinition Width="20*"/>
                                <ColumnDefinition Width="30*"/>
                                <ColumnDefinition Width="20*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="FROM"/>
                            <TextBox Name="tbCCConvertFrom" Grid.Column="1" Text="0" materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"/>
                            <Label Grid.Column="2" Content="TO"/>
                            <TextBox Name="tbCCConvertTo" Grid.Column="3" Text="0" materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"/>
                        </Grid>
                    </StackPanel>

                    <Label Grid.Column="0" Grid.Row="4" Content="NOTE CONVERTERS"/>
                    <StackPanel Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="2" Grid.RowSpan="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50*"/>
                                <ColumnDefinition Width="50*"/>
                            </Grid.ColumnDefinitions>
                            <Button Name="btnAddNOTEConvert" Grid.Column="0" Width="50" Content="+" Background="DarkOliveGreen" Click="btnAddNOTEConvert_Click" />
                            <Button Name="btnRemoveNOTEConvert" Grid.Column="1" Width="50" Content="-" Background="IndianRed" Click="btnRemoveNOTEConvert_Click" />
                        </Grid>
                    </StackPanel>
                    <ComboBox Name="cbNOTEConvert" Grid.Column="1" Grid.Row="5"/>
                    <StackPanel Grid.Column="1" Grid.Row="4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30*"/>
                                <ColumnDefinition Width="20*"/>
                                <ColumnDefinition Width="30*"/>
                                <ColumnDefinition Width="20*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="FROM"/>
                            <TextBox Name="tbNOTEConvertFrom" Grid.Column="1" Text="0" materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"/>
                            <Label Grid.Column="2" Content="TO"/>
                            <TextBox Name="tbNOTEConvertTo" Grid.Column="3" Text="0" materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"/>
                        </Grid>
                    </StackPanel>

                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Page>
