    <UseWPF>true</UseWPF>
    <StartupObject></StartupObject>
    <ApplicationIcon>assets\midi_port_icon_135398.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="assets\midi_port_icon_135398.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MaterialDesignColors" Version="2.1.4" />
