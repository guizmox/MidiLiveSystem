<Window x:Class="MidiLiveSystem.PresetBrowser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:MidiLiveSystem"
        mc:Ignorable="d"
        Title="Preset Browser" Height="500" Width="600" ResizeMode="NoResize" ShowInTaskbar="False" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="DarkBlue"/>
            <!-- Couleur du texte rouge -->
            <Setter Property="FontSize" Value="10"/>
            <!-- Taille de la police 10 -->
            <!-- Autres setters pour le style des labels peuvent être ajoutés ici -->
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="80*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition Width="90*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="Filter :"/>
                <TextBox x:Name="tbFilterTextBox" Background="LightGray" Grid.Column="1" Text="" Width="200" HorizontalAlignment="Left" TextChanged="FilterTextBox_TextChanged" />
            </Grid>

        </StackPanel>
        
        <TreeView x:Name="tvPresets" Grid.Row="2" SelectedItemChanged="tvPresets_SelectedItemChanged"/>
        <Label Name="lblCaption"  Grid.Row="0" Content="Select a Preset" FontWeight="Bold" Foreground="Red"/>
        <StackPanel Grid.Column="0" Grid.Row="3" Background="LightGray" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10*" />
                    <ColumnDefinition Width="6*" />
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition Width="6*" />
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition Width="6*" />
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition Width="8*" />
                    <ColumnDefinition Width="26*" />
                    <ColumnDefinition Width="10*" />
                </Grid.ColumnDefinitions>
                <Label Name="lblPresetInfo" Grid.Column="0"  Content="Data :" Foreground="Red" VerticalAlignment="Center"/>
                <Label Grid.Column="1" Content="LSB :" VerticalAlignment="Center"/>
                <TextBox Name="tbLsb" Grid.Column="2" MaxLength="3" Text="" materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed" SelectionChanged="tbPrg_SelectionChanged" />
                <Label Grid.Column="3" Content="MSB :" VerticalAlignment="Center"/>
                <TextBox Name="tbMsb" Grid.Column="4" MaxLength="3" Text="" materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed" SelectionChanged="tbPrg_SelectionChanged" />
                <Label Grid.Column="5" Content="PRG :" VerticalAlignment="Center"/>
                <TextBox Name="tbPrg" Grid.Column="6" MaxLength="3" Text="" materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed" SelectionChanged="tbPrg_SelectionChanged" />
                <Label Grid.Column="7" Content="NAME :" VerticalAlignment="Center"/>
                <TextBox Name="tbName" Text="Preset Name" Grid.Column="8" MaxLength="30" materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"/>

                <Button Name="btnClose" Grid.Row="3" Grid.Column="9" Content="OK" Width="50" Margin="5,0,5,0" HorizontalAlignment="Right" Click="btnClose_Click" />
            </Grid>
        </StackPanel>
    </Grid>
</Window>
